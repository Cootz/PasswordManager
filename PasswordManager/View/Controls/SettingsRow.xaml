<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Name="this"
             x:Class="PasswordManager.View.Controls.SettingsRow">
    <Grid BindingContext="{x:Reference this}" ColumnDefinitions="*, *">
        <Label Text="{Binding Title}" HorizontalOptions="End" VerticalOptions="Center"/>
        <ContentView Content="{Binding Content}" HorizontalOptions="Start" VerticalOptions="Center"/>
    </Grid>
</ContentView>
