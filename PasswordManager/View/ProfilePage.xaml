<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PasswordManager.View.ProfilePage"
             xmlns:viewmodel="clr-namespace:PasswordManager.ViewModel"
             xmlns:controls="clr-namespace:PasswordManager.View.Controls"
             x:DataType="viewmodel:ProfileViewModel"
             Title="ProfilePage">
    <ContentPage.Resources>
        <Style x:Key="labelStyle" TargetType="Label">
            <Setter Property="HorizontalOptions" Value="EndAndExpand"/>
            <Setter Property="VerticalOptions" Value="CenterAndExpand"/>
            <Setter Property="FontSize" Value="Medium"/>
        </Style>
    </ContentPage.Resources>
    
    <Grid RowDefinitions="auto, auto, auto" ColumnDefinitions="*,*">
        <Label Text="Service" Style="{StaticResource labelStyle}" Grid.Column="0" Grid.Row="0"/>
        <Label Text="{Binding ProfileInfo.Service.Name}" Style="{StaticResource labelStyle}" Grid.Column="0" Grid.Row="1"/>
        
    </Grid>
</ContentPage>