<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PasswordManager.View.RegisterPage"
             xmlns:viewmodel="clr-namespace:PasswordManager.ViewModel"
             x:DataType="viewmodel:RegisterViewModel"
             Title="Registeration">
    <VerticalStackLayout>
        <Label Text="Enter password"/>
        <Entry Text="{Binding Password.Value}" IsPassword="True"/>
        <Label Text="Confirm password"/>
        <Entry Text="{Binding PasswordConfirmation.Value}" IsPassword="True"/>
        <Button Text="Register" Command="{Binding RegisterCommand}"/>
    </VerticalStackLayout>
</ContentPage>